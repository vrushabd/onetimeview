# Database Configuration
DATABASE_URL=sqlite:///./onetime.db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# File Upload Limits (in bytes)
MAX_FILE_SIZE_FREE=104857600  # 100MB for free users
MAX_FILE_SIZE_PREMIUM=524288000  # 500MB for premium users

# Upload Directory (fallback for local storage)
UPLOAD_DIR=./uploads

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend URL
FRONTEND_URL=https://onetimeview-sooty.vercel.app

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
